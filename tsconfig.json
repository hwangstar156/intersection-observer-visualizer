{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "lib",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true, // 중요
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "isolatedModules": false,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
